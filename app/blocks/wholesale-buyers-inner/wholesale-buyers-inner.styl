.wholesale-buyers-inner
  margin-top 55px

  &__content
    display flex
    flex-flow row nowrap
    align-items center
    margin-bottom 125px

  &__content-column
    &:nth-child(1)
      max-width 580px

    &:nth-child(2)
      text-align center
      width calc(100% - 580px)

  &__content-title
    font-size 46px
    font-weight 100
    line-height 1.3
    margin-bottom 62px

  &__content-description
    font-size 24px
    font-weight 100
    line-height 2

  &__products
    margin-bottom 90px