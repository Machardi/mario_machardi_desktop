.personal-admin-account
  margin 0

  &__table
    width 100%

    & tr
      border-bottom 1px solid #f1f4f8

      &:last-child
        border-bottom none

    & th
      font-size 12px
      font-weight 100
      padding 10px
      vertical-align top
      text-transform uppercase

      & i.fa
        margin -5px 0 0 5px
        vertical-align middle

    & td
      font-size 16px
      font-weight 100
      padding 18px 10px
      vertical-align middle

      & a
        color #0096ff

      & a:hover
        text-decoration underline

    & i.fa
      display inline-block
      font-size 16px
      font-weight 900

    & [sort-table]
      cursor pointer
      user-select none

  &__file-choose
    overflow hidden
    position relative

    &_file
      cursor pointer
      font-size 1000px
      height 100%
      left 0
      opacity 0
      position absolute
      top 0
      width 100%

    &_field
      border 1px solid #e5e5e5
      font-size 12px
      font-weight 100
      padding 6px 10px
      width calc(100% - 165px)

    &_btn
      margin-left 25px
      min-width 140px !important
      padding 6px 15px !important

  &__select-control + .chosen-container .chosen-single
    background-color white !important
    border 1px solid #e5e5e5 !important
    height 30px !important
    padding 2px 10px !important

  &__select-control + .chosen-container .chosen-drop
    background-color white
    border 1px solid #e5e5e5
    margin-top -1px