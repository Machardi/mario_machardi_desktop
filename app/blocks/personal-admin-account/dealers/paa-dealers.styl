.paa-dealers
  padding 37px 40px 0

  &__print-list
    border-bottom 1px solid #f1f4f8
    display flex
    align-items center
    margin-bottom 50px
    padding-bottom 35px

    &__label
      font-size 18px
      font-weight 100

    &__content
      padding 0 215px 0 135px
      width calc(100% - 430px)

      & .chosen-container
        width 100% !important

    & .btn_theme_black.btn_size_s
      padding 6px 15px

  &__comments
    border-top 1px solid #f1f4f8
    display flex
    margin 0 0 45px
    padding 20px 0 0

    &_item
      padding 0 64px
      width 50%

      &:nth-child(2n + 1)
        padding-left 0

      &:nth-child(2n + 2)
        padding-right 0

    &_item-type
      font-size 16px
      font-weight 700

      & a
        color #0096ff
        font-weight 300

        &:hover
          text-decoration underline

    &_item-description
      font-size 16px
      font-weight 100
      margin-top 15px

  & .personal-area__submit
    border-bottom 1px solid #f1f4f8
    margin-bottom 45px

  & .basket__good_remove
    float none

  & .personal-admin-account__table
    &.delete td:nth-last-child(1)
      text-align center

    & td
      padding 28px 10px

    & .status
      color #0096ff

      &_under
        color #0096ff

      &_sent
        color #46963d
        font-weight 700

  &__modal
    bottom 0
    display flex
    justify-content center
    align-items center
    left 0
    position fixed
    right 0
    top 0
    z-index 10
    visibility hidden
    opacity 0

    &_wrapper
      background-color white
      box-shadow 3px 3px 54px rgba(0, 0, 0, 0.35)
      max-width 800px
      padding 45px 0 50px
      text-align center
      width 100%

    &_title
      font-size 21px
      font-weight 700
      margin-bottom 35px

    &_textarea textarea
      border 1px solid #e1e1e1
      max-width 580px
      height 170px
      padding 10px
      font-size 12px
      font-weight 100
      resize vertical
      width 100%

    &_buttons
      margin-top 45px

      & .btn
        margin 0 5px