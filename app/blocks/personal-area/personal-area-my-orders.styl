.personal-area-my-orders
  padding 20px 0 0

  &__table
    margin 0 15px

    & tr
      border-bottom 1px solid #f1f4f8

      &:last-child
        border-bottom none

    & th
      font-size 12px
      font-weight 100
      padding 10px
      vertical-align top
      text-transform uppercase

      & i.fa
        margin -5px 0 0 5px
        vertical-align middle

    & td
      font-size 12px
      font-weight 100
      padding 40px 10px
      vertical-align top

      &:nth-child(1)
        & i.fa
          margin-right 10px

    & i.fa
      display inline-block
      font-size 16px
      font-weight 900

  &__search
    margin-top 10px

    &_field
      border 1px solid #e1e1e1
      padding 2px 10px
      width 90px