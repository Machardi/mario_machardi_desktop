.distribution
  padding 52px 40px 0

  &__row
    margin-bottom 54px

    &_content

      &_column-wrapper
        display flex

      &_column
        &_three
          width (100 / 3)%

        &_four
          width (100 / 4)%

  & .refinement-options
    & > .distribution__row_content
      & > .distribution__checkbox
        margin-right 30px

      & > .distribution__row_content_column-wrapper
        margin-top 43px

  & .certain-dealers
    & .distribution__row_content
      border-bottom 1px solid #c2c0c1
      border-top 1px solid #c2c0c1
      max-height 670px
      margin 0 -40px
      overflow-y scroll
      padding 33px 40px 18px

    & .distribution__checkbox
      margin-bottom 22px

  & .distribution-text
    text-align center

    & .distribution__row_content
      margin-top 43px

  & .subscribe
    & > .distribution__row_content
      & > .distribution__checkbox
        margin-right 30px

      & > .distribution__row_content_inner
        margin-top 43px

    & .distribution__checkbox_label
      font-size 14px

  &__title
    font-size 21px
    font-weight 700
    line-height 1.7
    margin-bottom 20px

    & small
      display block
      font-size 16px
      font-weight 100

  &__checkbox
    display inline-block
    cursor pointer
    user-select none

    &_input
      display none

    &_label
      font-size 16px
      font-weight 100
      transition font-weight 0.15s ease-out

      &:before
        background-color white
        border 1px solid #cfcece
        content ''
        display inline-block
        vertical-align middle
        height 20px !important
        margin-top -2px
        margin-right 10px
        width 21px !important

      &_large
        font-size 18px

        &:before
          margin-right 25px

    &_input:checked + &_label
      &:before
        background-repeat no-repeat
        retinaSprite($checkbox_selected_group)
        background-position 5px 4px
        content ''

    &_input[disabled] + &_label
      color #cfcece

      &:before
        border 1px solid #f5f5f5

  &__checkbox-links
    border-bottom 1px solid #f1f4f8
    display flex
    padding-bottom 7px

  &__checkbox-link
    width (100 / 34)%

    &:nth-child(1)
      width 55px

    &_input
      display none

    &_label
      color #0096ff
      cursor pointer
      font-size 21px
      font-weight 100

    &_input:checked + &_label
      color black

  &__selectes
    margin-top 65px

    &_row
      display flex
      width 620px

    &_column
      &:nth-child(1)
        width calc(100% - 250px)

      &:nth-child(2)
        width 250px

    &_label
      font-size 18px
      font-weight 500
      margin-bottom 25px
      max-width 310px

      & small
        display block
        font-size 16px
        font-weight 100

    &_content
      margin-bottom 30px

    &_content-scroll
      border 1px solid #e5e5e5
      max-height 230px
      overflow-y scroll
      padding 25px

      & .distribution__checkbox
        margin-bottom 15px

        &:last-child
          margin-bottom 0

  &__select-dropdown
    &_button
      background white
      border 1px solid #e5e5e5
      border-radius 0
      box-shadow none
      color black
      font-size 16px
      font-weight 100
      height 40px
      padding 8px 10px
      text-align initial
      width 100%

      &_caret
        display inline-block
        float right
        margin-top 9px
        position relative
        retinaSprite($arrow_chosen_down_group)
        vertical-align middle

      &[aria-expanded='true'] &_caret
        retinaSprite($arrow_chosen_up_group)

    &_menu
      border 1px solid #e5e5e5
      border-radius 0
      box-shadow none
      margin-top -1px
      max-height 230px
      overflow-y scroll
      padding 25px
      width 100%