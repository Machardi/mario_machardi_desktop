.personal-area
  margin-top 40px

  &__tabs

    &_items
      margin 0
      padding 0

    &_item
      float left
      list-style none
      margin 0 1px

      &:first-child
        margin-left 0

      &:last-child
        margin-right 0

    &_link
      background-color #f1f4f8
      border 1px solid #f1f4f8
      border-bottom none
      display block
      font-size 21px
      font-weight 100
      line-height 23px
      padding 8px 24px
      text-align center

    &_item.active &_link
      background-color white

    &_panels
      border 1px solid #f1f4f8

    &_panel-content
      display none

      &.active
        display block

  &__submit
    border-top 1px solid #f1f4f8
    text-align center
    margin 0
    padding 45px 0

    & .btn
      margin 0 10px