      .main-image__item_wrapper
        .main-image__large-title
          | Весна &mdash; лето.
          br
          b 2016
        .main-image__item_50perc-resize_image
          img(src='uploads/img_1.jpg' alt='Весна-лето')

    .main-image__item.main-image__item_230pix-notresize
      .main-image__item_wrapper
        .logos.logos__wolecula-logo_colorize
