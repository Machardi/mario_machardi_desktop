.catalog-items
  margin-top 19px

  &__title
    margin-bottom 55px
    display: none
    
    &.active
      display: block

  &__items
    display flex
    flex-flow row wrap
    margin-bottom 40px
    padding 0 60px 0 10px

    &_item
      padding 0 5px
      position relative
      text-align center
      transition box-shadow 0.3s ease-out
      width (100 / 6)%

      &_open-popup
        z-index 3

      &_open-popup .catalog-items__popup_slider-preview
        z-index 3

      & .fotorama__nav-wrap
        height 0
        visibility hidden

    &_image
      margin 0 auto 25px
      height 190px
      //max-width 170px
      overflow hidden

      & img
        display inline-block
        height auto
        max-width 100%

    &_item_open-popup &_image
      position absolute
      width 270px

    &_title
      color black
      font-size 14px
      font-weight 100
      transition color 0.15s ease-out, font-weight 0.3s ease-out

      &:hover
        color #0096ff
        font-weight 500
        text-decoration underline

    &_price
      font-size 16px
      font-weight 500
      margin-top 5px

      & .rub
        margin-left 5px

    &_old-new-price
      font-size 16px
      font-weight 500
      margin-top 5px

      & .rub
        margin-left 5px

      &_old,
      &_new
        display inline-block
        vertical-align middle

      &_old
        color #858585
        text-decoration line-through

      &_new
        color #e20c0c
        margin-left 5px

  &__popup
    background-color white
    box-shadow 0 0 18px alpha(#615f5f, 0.2)
    display none
    left -999px
    margin 0 auto
    padding 310px 15px 20px
    position absolute
    right -999px
    top -22px
    width calc(100% + 65px)

    &_open
      display block

    &_slider-preview
      height 100%
      margin 0 auto
      position relative

      & .fotorama__stage
        overflow visible

      & .fotorama__arr
        background none
        border none
        height 100%
        top 245px
        width 30px
        z-index 1

        &.fotorama__arr--disabled
          opacity 0.5

      & .fotorama__arr--prev
        retinaSprite($arrow_slider_left_group)

      & .fotorama__arr--next
        retinaSprite($arrow_slider_right_group)

      & .fotorama__thumb-border
        display none

      & .fotorama__nav__frame
        transition opacity 0.15s ease-out

      & .fotorama__active
        opacity 0.5

      &_item
        display flex
        height 100%
        justify-content center
        align-items center
        width 100%
        padding-top 30px
        
        a
          position: relative
          
          .stock
            left -10px
            top -15px
            position: absolute
            width 50px
            height 50px
            background-color #e4273b
            border-radius 50%
            display -webkit-flex
            display -moz-flex
            display -ms-flex
            display -o-flex
            display flex
            align-items center
            justify-content center
            font-weight: bold
            font-size 12px
            color #fff
            text-transform: uppercase
            line-height 2
            
            &.sale,
            &.new
              font-size 15px

    &_top-buttons
      position absolute
      right 12px
      top 13px
      width 45px
      z-index 3

    &_like,
    &_print
      background none
      border none
      display block
      margin 0 auto
      padding 6px

    &_like
      &:hover
        & .icons
          retinaSprite($like_active_group)

    &_print
      &:hover
        & .icons
          retinaSprite($print_active_group)

    &_tabs
      margin 35px auto 20px
      width 225px

      &_tabs
        margin 0 0 16px
        padding 0

      &_tab
        border-right 1px solid #d2d2d2
        float left
        list-style none
        margin 0
        padding 0 10px

        &:first-child
          padding-left 0

        &:last-child
          border-right none
          padding-right 0

      &_link
        color #0096ff
        font-weight 700
        font-size 16px

        &:hover
          color #0096ff
          text-decoration underline

      & .active &_link
        color black
        font-weight 100
        text-decoration none

      &_tabpanel
        display none

        &.active
          display block

    &_sizes
      &_item
        float left
        margin 2.5px
        width 40px

      &_label
        display block
        margin 0

        & input
          display none

      &_label input:checked + &_checkbox
        background-color black
        color white

      &_checkbox
        background-color #f1f4f8
        cursor pointer
        display block
        font-size 18px
        font-weight 300
        line-height 22px
        padding 9px 5px
        user-select none
        transition background-color 0.15s ease-out, color 0.15s ease-out
        text-align center

    &_grids
      &_item
        float left
        margin 2.5px
        width 70px

      &_label
        display block
        margin 0

        & input
          display none

      &_label input:checked + &_checkbox
        background-color black
        color white

      &_checkbox
        background-color #f1f4f8
        cursor pointer
        display block
        font-size 18px
        font-weight 300
        line-height 22px
        padding 9px 5px
        user-select none
        transition background-color 0.15s ease-out, color 0.15s ease-out
        text-align center

    &_add-basket
      & .btn
        width 100%

  &__more
    margin-top 70px
    text-align center

    &_link
      color black
      font-size 14px
      font-weight 700

  &__about-brand
    margin-top 80px

    &_title
      font-size 24px
      font-weight 700
      line-height 28px
      margin-bottom 15px
      position relative
      text-align center

      &_text
        background-color white
        display inline-block
        padding 0 10px
        position relative
        width 270px
        z-index 1

      &:after
        background-color #f0f0f0
        bottom 0
        content ''
        height 1px
        left 0
        margin auto 0
        position absolute
        top 0
        width 100%

    &_wrapper
      background-color #f9fbfc
      padding 60px 20px 40px

    &_column
      float left
      padding 0 2%
      width (100 / 3)%

      & h3
        font-weight 700
        line-height 36px
        margin 0 0 32px

      & p
        font-size 21px
        font-weight 100
        line-height 29px
        margin 0 0 32px

      & ul
        margin 0
        padding 0 0 0 (6 + 12)px

      & li
        font-size 21px
        font-weight 100
        list-style none
        line-height 25px
        margin 18px 0

        &:before
          background-color black
          border-radius 50%
          content ''
          display inline-block
          height 6px
          margin-left -(6 + 12)px
          margin-right 12px
          vertical-align middle
          width 6px