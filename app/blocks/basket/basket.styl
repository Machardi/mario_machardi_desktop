.basket
  padding-top 45px
  position relative

  &__steps
    position absolute
    top -22px
    text-align center
    transition top 0s ease-out
    width 100%
    z-index 1

    &_sticky
      background-color white
      border-bottom 1px solid #e9e9e9
      border-top 1px solid #e9e9e9
      position fixed
      left 0
      padding 10px 0
      top 60px
      transition top 0.15s ease-out

    &_item
      display inline-block
      margin 0 8px
      vertical-align middle

      &:first-child
        margin-left 0

      &:last-child
        margin-right 0

    &_circle
      border 1px solid black
      border-radius 50%
      display inline-block
      height 15px
      vertical-align middle
      width 15px

    &_item_active &_circle
      background-color black

    &_text
      color #878787
      display inline-block
      font-size 14px
      font-weight 300
      line-height 17px
      vertical-align middle

    &_item_active &_text
      color black

  &__global-tab
    display none
    margin-bottom 100px

    &[mm-step-status='active']
      display block

    &:last-child
      margin-bottom 0

    &_header
      margin-bottom -1px

    &_tabs
      float left
      margin 0
      padding 0

      &_item
        float left
        list-style none
        margin 0 1px

        &:first-child
          margin-left 0

        &:last-child
          margin-right 0

      &_link
        background-color #f1f4f8
        border 1px solid #f1f4f8
        border-bottom none
        display block
        font-size 21px
        font-weight 100
        line-height 23px
        padding 8px 24px
        text-align center
        min-width 230px

      &_item.active &_link
        background-color white

    &_panels
      border 1px solid #f1f4f8

    &_panel-content
      display none

      &.active
        display block

    &_next-step
      border-top 1px solid #f1f4f8
      text-align center
      margin 0 auto
      max-width 1330px
      padding 45px 0
      width 100%

      +below(1440px)
        max-width 1400px
        padding 45px 35px

      & .btn
        width 445px

  &__my-basket
    &_no-goods
      font-size 27px
      font-weight 100
      line-height 33px
      padding 129px 0
      text-align center

    &_options
      float right

      & button
        background none
        border none
        display inline-block
        padding 2px 10px
        vertical-align middle

      &_turn
        font-size 36px
        font-weight 900
        height 38px
        line-height 40px
        padding 0 10px !important

    &_table
      display table
      margin 0 auto
      max-width 1330px
      width 100%

      +below(1440px)
        max-width 1400px
        padding 0 35px

      &_tr
        display table-row

      &_td,
      &_th
        border-bottom 1px solid #f1f4f8
        display table-cell

        &[width='1']
          width 17%

        &[width='2']
          width 33%

      &_td
        padding 35px 0
        
        &.basket__my-basket_table_td--numder
          position: relative
          
          .input-number-increment,
          .input-number2-increment,
          .input-number-decrement
          .input-number2-decrement
            display inline-block
            retinaSprite($arrow_chosen_down_group)
            position relative
            width 16px
            vertical-align middle
            position: absolute
            left 75px
            cursor: pointer
            top 50%
          
          .input-number-increment
          .input-number2-increment
            transform rotate(180deg)translateX(3px)translateY(180%)
           
          .input-number-decrement
          .input-number2-decrement
            transform translateY(30%)
            

      &_tr:last-child &_th,
      &_tr:last-child &_td
        border-bottom none

      &_sorted-link
        display block
        font-size 14px
        font-weight 300
        line-height 16px
        padding 50px 0 20px
        text-transform uppercase

        & .fa
          display inline-block
          font-size 20px
          font-weight 900
          margin -2px 0 0 10px
          vertical-align middle

  &__good
    display flex
    justify-content flex-start
    align-items center
    text-align center

    &_photo
      height 190px
      margin 0 40px

      & img
        height auto
        max-width 100%

    &_name
      font-size 15px
      font-weight 300
      line-height 17px

    &_count
      border 1px solid #e5e5e5
      font-size 16px
      font-weight 300
      line-height 18px
      padding 10px
      width 95px
      text-align: center
      text-indent -10px

    &_price
      display inline-block
      font-size 18px
      font-weight 100
      line-height 20px
      vertical-align middle

    &_remove
      background-color transparent
      border 1px solid #d10909
      border-radius 50%
      color #d10909
      float right
      font-size 22px
      line-height 24px
      margin-top -6px
      padding 1px 7px
      transition background-color 0.15s ease-out, color 0.15s ease-out

      &:hover
        background-color #d10909
        color white

  &__wishlist
    padding-top 50px

    &_item
      float left
      margin-bottom 50px
      padding 0 15px
      text-align center
      transition box-shadow 0.3s ease-out
      width (100 / 6)%

    &_image
      margin 0 auto 25px
      max-width 170px
      overflow hidden

      & img
        display inline-block
        height auto
        max-width 100%

    &_title
      color black
      font-size 14px
      font-weight 100
      transition color 0.15s ease-out

    &_item:hover &_title
      color #0096ff

    &_price
      font-size 16px
      font-weight 500
      margin-top 5px

      & .rub
        margin-left 5px

  &__personal-data
    margin 0 auto
    max-width 1330px
    padding-top 65px
    padding-bottom 20px
    width 100%

    +below(1440px)
      max-width 1400px
      padding 65px 30px 0

    &_column
      float left
      width (100 / 3)%

  &__delivery-payment
    margin 0 auto
    max-width 1330px
    padding-bottom 40px
    padding-top 45px
    width 100%

    +below(1440px)
      max-width 1400px
      padding 45px 30px 40px

    &_column
      float left
      padding-bottom 30px
      padding-top 20px
      width (100 / 2)%

      &:nth-child(1)
        border-right 1px solid #f1f4f8
        padding-right 45px

      &:nth-child(2)
        padding-left 45px

    & .transport-company
      margin-top -10px
      margin-left 30px

  &__confirm-order
    margin 0 auto
    max-width 1330px
    padding-bottom 40px
    padding-top 45px
    width 100%

    +below(1440px)
      max-width 1400px
      padding 45px 30px 40px

    &_column
      float left
      padding-bottom 30px
      padding-top 20px
      width (100 / 2)%

      &:nth-child(1)
        border-right 1px solid #f1f4f8
        padding-right 45px

      &:nth-child(2)
        padding-left 45px

    &_total
      border-bottom 1px solid #f1f4f8
      border-top 1px solid #f1f4f8
      padding 17px 0

      &_left
        float left

      &_right
        float right

      &_amount
        font-size 24px
        line-height 26px

        & .rub
          margin-left 10px

      & .basket__confirm-order_text
        padding 6px 0

    &_text
      font-size 14px
      font-weight 300
      line-height 16px
      margin-bottom 20px

      &:last-child
        margin-bottom 0

      & .link
        font-weight 600
        margin-top 5px

  &__row
    margin-bottom 30px

    &_text
      font-size 14px
      font-weight 100
      line-height 16px
      margin-top -6px

  &__label
    display block
    font-size 14px
    font-weight 600
    line-height 16px
    margin-bottom 10px

  &__input-control
    border 1px solid #e5e5e5
    font-size 16px
    font-weight 300
    line-height 18px
    max-width 250px
    padding 10px
    width 100%
  
  &__delete-extra
    display block
    font-size 11px
    margin-top 6px
    color #087ce2

  &__text-control
    border 1px solid #e5e5e5
    font-size 16px
    font-weight 300
    line-height 18px
    padding 10px
    resize none
    width 100%

  &__radio-control
    display block
    cursor pointer
    margin-bottom 8px

    & input
      display none

    &_label
      display inline-block
      font-size 14px
      font-weight 300
      line-height 16px
      vertical-align middle

      &:before
        background-color white
        border 1px solid black
        border-radius 50%
        content ''
        display inline-block
        height 19px
        margin -2px 10px 0 0
        vertical-align middle
        transition box-shadow 0.2s ease-out
        width 19px

    & input:checked + &_label
      &:before
        box-shadow 0 0 0 5px white inset, 0 0 0 9px black inset

  &__select-control + .chosen-container .chosen-single
    background-color white !important
    border 1px solid #e5e5e5 !important
    text-align left

  &__select-control + .chosen-container .chosen-drop
    background-color white
    border 1px solid #e5e5e5
    margin-top -1px