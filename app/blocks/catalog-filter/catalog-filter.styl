.catalog-filter
  margin-top 35px
  
  &__title
    margin-bottom 50px
    
    img
      width 15px
      height 15px
      position: absolute
      right 40px
      top  55%
      transform translateY(-50%)
      transition all 200ms linear
      
    .global-blocks-title_text
      cursor: pointer
      position: relative
      width: auto
      padding: 0 70px
      
      &.popup-link-active
        img 
          transform translateY(-50%)rotate(180deg)
  
  &__filters
    display: none
    padding 0 10px
    transition all 300ms linear
    
    &.popup-open
      display: block
  
  ul,li,nav
    list-style-type: none
    padding: 0

  &__filters
    margin 0 -3px

    &_row
      display -webkit-flex
      display -moz-flex
      display -ms-flex
      display -o-flex
      display flex
      justify-content space-between
      margin-bottom 40px

    &_group
      display -webkit-flex
      display -moz-flex
      display -ms-flex
      display -o-flex
      display flex
      
      &_title
        font-weight: bold
        flex-basis 100px
        width 100px
      
      &.sizes
        width 100%
        .catalog-filter__filters_list.sezes-letter
          margin-left: auto;
          
      &.color
        width 100%
        
        .catalog-filter__filters
          &_list
            width: calc(100% - 100px)
            justify-content space-between
            
          &__item
            margin-right 30px
            height 20px
            
            &:last-child
              margin-right 0
      
      &.sleeve
        margin-right 100px
        
        .catalog-filter
          &__filters__item
            display -webkit-flex
            display -moz-flex
            display -ms-flex
            display -o-flex
            display flex
            align-items center
            
            label
              margin-bottom 0
            
          &__filters_group_title
            display -webkit-flex
            display -moz-flex
            display -ms-flex
            display -o-flex
            display flex
            align-items center

          &__range
            &_label
              margin-right 10px
        
      &.range
        margin-right: auto
        
        .catalog-filter
          &__filters__item
            display -webkit-flex
            display -moz-flex
            display -ms-flex
            display -o-flex
            display flex
            align-items center
            
            label
              margin-bottom 0
            
          &__filters_group_title
            display -webkit-flex
            display -moz-flex
            display -ms-flex
            display -o-flex
            display flex
            align-items center
            margin-right 30px

          &__range
            &_input
              padding 5px 10px
              width 70px
            
            &_label
              margin-right 10px
              
      &.buttons
        margin auto
        
        button
          margin: 0 5px
          
          &.more-filters-active
            background-color #b3b3b3
    
    &_list
      display -webkit-flex
      display -moz-flex
      display -ms-flex
      display -o-flex
      display flex
      
    &__item
      margin-right 23px
      
      &:last-child
        margin-right 0
      
      .catalog-filter
        
        &__checkbox
          position: relative
          min-width 20px
          height 20px
          
          &:before
            position: absolute
            content ''
            width 20px
            height 20px
            border 1px solid #000
          
          &_label
            margin-left 25px
            
          
          &_input
            width 1px
            height 1px
            position: absolute
            overflow: hidden
            clip rect(0 0 0 0)
            padding 0
            margin: 0
            border 0
            
            &:checked
              &~img
              &+img
                display: block
          
          img
            position: absolute
            top 5px
            left 5px
            display: none
            height 10px
            width: auto
            
      label
        font-weight: lighter

