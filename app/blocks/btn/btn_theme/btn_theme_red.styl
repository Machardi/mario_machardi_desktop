.btn_theme_red
  background-color #d10909
  border none
  border-radius 0
  color white
  font-weight 100
  transition background-color 0.15s ease-out

  &:hover
    background-color alpha(#d10909, 0.8)
    color white

  &:focus
    color white

  &.btn_size_s
    font-size 14px
    line-height 18px
    min-width 150px
    padding 8px 15px

  &.btn_size_m
    font-size 16px
    line-height 20px
    min-width 190px
    padding 10px 20px

  &.btn_size_l
    font-size 20px
    line-height 24px
    min-width 200px
    padding 14px 20px
