.products
  margin-top 45px

  &__group
    margin-bottom 60px

    &:last-child
      margin-bottom 0

    &_title
      margin-bottom 95px

  &__slider
    &_prev-arrow,
    &_next-arrow
      background none
      border none
      bottom 0
      height 200px
      position absolute
      top 0
      width 30px
      z-index 1

      &.slick-disabled
        opacity 0.5

      & .fa
        bottom 0
        font-size 35px
        font-weight 900
        height 35px
        margin auto 0
        position absolute
        top 0

    &_prev-arrow
      left 0

      & .fa
        left 0

    &_next-arrow
      right 0

      & .fa
        right 0

    &_item
      float left
      padding 0 15px
      text-align center
      transition box-shadow 0.3s ease-out
      width (100 / 6)%

    &_image
      margin 0 auto 25px
      max-width 170px
      overflow hidden

      & img
        display inline-block
        height auto
        max-width 100%

    &_title
      color black
      font-size 14px
      font-weight 100
      transition color 0.15s ease-out

    &_item:hover &_title
      color #0096ff

    &_price
      font-size 16px
      font-weight 500
      margin-top 5px

      & .rub
        margin-left 5px