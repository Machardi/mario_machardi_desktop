.pma-dealers
  & .paa-registration-requests-one__column:nth-child(1)
    border-right none

  &__search
    border-bottom 1px solid #f1f4f8
    margin-bottom 50px
    padding-bottom 30px

    &_header
      display flex

    &_column
      font-size 18px
      font-weight 100

      &:nth-child(1)
        width 70%

      &:nth-child(2)
        text-align right
        width 30%

    & label
      font-size 18px
      font-weight 100
      vertical-align top

    &_input
      display inline-block
      margin -3px 0 0 10px
      vertical-align top

      & form
        display inline-block
        position relative
        width 315px

      & input
        width 100%

    &_input-warning
      color #d10909
      font-size 16px
      margin-top 15px

    &_table
      margin 60px 0 -30px

      & table tr
        &:first-child
          border-top 1px solid #f1f4f8

    &_finded
      font-size 16px
      font-weight 100
      margin-bottom 15px