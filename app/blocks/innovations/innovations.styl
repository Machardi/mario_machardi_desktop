.innovations
  margin-top 55px

  &__title
    margin-bottom 15px

  &__list
    margin-top 45px

    &_item
      float left
      //height 270px
      padding 0 2px
      text-align center
      width (100 / 3)%

      &:first-child
        padding-left 0

      &:last-child
        padding-right 0

      &_wrapper
        background-color #f9fbfc
        padding 60px 10px

    &_icons
      margin-bottom 17px

      & .icons
        margin 0 2px

    &_title
      font-size 21px
      font-weight 100
      line-height 25px
      letter-spacing -0.6px

      +below(1320px)
        font-size 19px
        line-height 23px

    &_intro
      font-size 21px
      font-weight 700
      line-height 25px
      letter-spacing -0.6px

      +below(1320px)
        font-size 19px
        line-height 23px

    &_description
      font-size 14px
      font-weight 100
      line-height 20px
      margin-top 28px