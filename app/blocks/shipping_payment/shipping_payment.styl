.shipping_payment
  &__column
    &_left,
    &_right
      border 1px solid #f1f4f8
      height 250px
      padding 36px 40px

      & p
        font-size 16px
        font-weight 100
        line-height 18px

      & ul
        margin 0
        padding 0

        & li
          font-size 14px
          font-weight 100
          line-height 16px
          list-style none
          margin 3px 0

    &_left
      float left
      margin-right 5px
      width calc(100% - 470px)

    &_right
      float right
      width 465px

  &__title
    font-size 21px
    font-weight 100
    line-height 23px
    margin-bottom 20px

  &__form
    margin-top 45px

  &__input-control
    border 1px solid black
    display inline-block
    font-size 16px
    font-weight 100
    line-height 18px
    margin-right 5px
    padding 10px
    vertical-align middle
    width calc(100% - 195px)

  &__items
    width calc(100% - 470px)

    &_item
      border-bottom 1px solid #f1f4f8

    &_link
      padding 12px 20px

      &[aria-expanded='false']
        & .fa-angle-up
          display none

      &[aria-expanded='true']
        & .fa-angle-down
          display none

    &_title
      display inline-block
      font-size 18px
      font-weight 700
      line-height 20px
      vertical-align middle
      width calc(100% - 35px)

    &_arrow
      display inline-block
      vertical-align middle

      & .fa
        font-size 35px
        font-weight 900

  &__table
    & tr
      border-bottom 1px solid #f1f4f8

      &:last-child
        border-bottom none

    & th,
    & td
      padding 0 20px

    & th
      font-size 10px
      font-weight 100
      line-height 13px
      padding-bottom 16px
      padding-top 16px
      text-transform uppercase
      vertical-align bottom

    & td
      font-size 12px
      font-weight 100
      line-height 14px
      padding-bottom 25px
      padding-top 25px

    &_company
      margin-bottom 18px
      max-width 110px

      & img
        height auto
        max-width 100%

    &_tooltip
      background-color #898989
      border-radius 50%
      color white
      cursor pointer
      display inline-block
      height 15px
      font-size 10px
      font-weight 700
      line-height 12px
      margin 0 5px
      padding 2px 0
      position relative
      top -8px
      text-align center
      width 15px