.wholesale-buyers
  margin-top 55px

  &__title
    margin-bottom 15px

  &__wrapper
    height 500px
    margin-top 35px
    position relative

  &__item
    height 100%
    padding 0 2px
    position absolute
    width (100 / 3)%

    &_wrapper
      background-color #f9fbfc
      height 100%
      overflow hidden
      padding 35px 40px
      position relative

    &_title
      font-size 21px
      font-weight 100
      line-height 25px

    &_list
      margin 0
      padding 0 0 0 (6 + 12)px

    &_list-item
      font-size 21px
      font-weight 100
      list-style none
      line-height 25px
      margin 18px 0

      &:before
        background-color black
        border-radius 50%
        content ''
        display inline-block
        height 6px
        margin-left -(6 + 12)px
        margin-right 12px
        vertical-align middle
        width 6px

    &_list-text-small
      display block
      font-size 16px

  &__audio-adv
    height calc(50% - 2px)

    & .wholesale-buyers__item_wrapper
      background-color #d91b5c
      padding 27px 15px
      text-align center

    & .icons
      margin-bottom -9px

    &_description
      color white
      font-size 21px
      font-weight 100
      line-height 25px

    & a
      color white

  &__delivery
    height calc(50% - 2px)
    top calc(50% + 2px)

    & .wholesale-buyers__item_wrapper
      background-color #c7b299
      padding 65px 15px
      text-align center

    & .icons
      margin-bottom 20px

    &_description
      color white
      font-size 21px
      font-weight 100
      line-height 25px

    & a
      color white

  &__sorting
    left (100 / 3)%

    &_icon
      bottom 32px
      font-size 150px
      font-weight 700
      line-height 120px
      left 27px
      position absolute

  &__advantages
    left (100 - 100 / 3)%
