.more-info-product
  margin-top 67px

  &__title
    margin-bottom 35px

    & .global-blocks-title_text
      padding 0

  &__collapse
    &_item
      background-color #f9fbfc
      margin 5px 0

    &_button
      background none
      border none
      padding 48px 40px
      text-align left
      width 100%

      & .fa
        float right
        font-size 35px
        font-weight 700

    &_icons
      display inline-block
      margin-right 60px
      vertical-align middle
      width 50px

    &_title
      display inline-block
      font-size 24px
      font-weight 700
      vertical-align middle

    &_content
      padding 0 40px 0 150px
      transition padding-bottom 0.2s ease

      &.collapsing
        transition height 0.35s ease, visibility 0.35s ease

      &.in
        padding-bottom 65px

      & p
        font-size 24px
        font-weight 100
        line-height 48px

        &:last-child
          margin-bottom 0

      & .more-info-product__size-guide-table
        margin 70px -40px 0 -150px
        width calc(100% + 190px)

  &__size-guide-tabs
    &_tabs
      margin 0
      padding 0

      &_item
        border-right 1px solid black
        display inline-block
        list-style none
        padding 0 6px
        vertical-align middle

        &:first-child
          padding-left 0

        &:last-child
          border-right none
          padding-right 0

      &_link
        display block
        font-size 18px
        font-weight 500
        line-height 22px
        transition font-weight 0.2s ease-out

      &_item.active &_link
        font-weight 100

    &_panel
      display none

      &.active
        display block

  &__size-guide-table
    & th
      border 1px solid #e3e4e5
      font-size 16px
      font-weight 700
      padding 9px 20px

    & td
      border 1px solid #e3e4e5
      font-size 16px
      font-weight 100
      line-height 21px
      padding 9px 20px