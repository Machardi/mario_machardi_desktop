.welcon-welded-connection
  margin-top 45px

  &__logo
    margin-bottom 14px
    position relative

    &_wrapper
      background-color white
      margin 0 auto
      position relative
      text-align center
      width 270px
      z-index 1

    &:after
      background-color #f0f0f0
      bottom 0
      content ''
      height 1px
      left 0
      margin auto 0
      position absolute
      top 0
      width 100%

  &__wrapper
    background url('../images/bg_welcon.png') no-repeat center right
    background-size cover
    height 500px
    padding 50px

  &__description
    color white
    font-size 21px
    font-weight 100
    line-height 31px
    max-width 540px
    padding 10px

    & b
      display block
      margin-top 5px