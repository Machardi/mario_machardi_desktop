.header-popup-form
  background-color white
  border-top 1px solid black
  display none
  margin-top -2px
  padding 20px 0 40px
  position absolute
  top calc(100% - 44px)
  width 100%
  z-index 2

  &.popup-open
    display block

  &__title
    font-size 21px
    font-weight 700
    line-height 25px
    margin-bottom 40px
    text-align center

    &_subtitle
      font-size 16px
      font-weight 100
      margin-top 10px

    &_link
      color #0096ff
      cursor pointer

  &__form
    &_columns
      margin 0 auto
      max-width 460px
      width 100%

      &_large
        max-width 578px

    &_column
      float left
      margin 0 4px
      width 220px

      &:first-child
        margin-left 0

      &:last-child
        margin-right 0

      &_large
        width 350px

    &_group
      display block
      margin-top 14px

      &_center
        text-align center

    &_column &_group
      &:first-child
        margin-bottom 0

    &_label
      display block
      font-size 16px
      font-weight 100
      line-height 20px

    &_label-help
      display inline-block
      font-size 11px
      line-height 15px
      margin 0 5px

    &_field
      border 1px solid #e1e1e1
      border-radius 0
      font-size 15px
      font-weight 300
      line-height 20px
      padding 4px 10px
      width 100%

    &_textarea
      border 1px solid #e1e1e1
      border-radius 0
      font-size 15px
      font-weight 300
      line-height 20px
      padding 4px 10px
      resize none
      width 100%

    &_submit
      margin-top 29px
      text-align center

      & .btn
        margin 0 5px

    &_subfield-link
      color #0096ff
      cursor pointer
      display inline-block
      font-size 12px
      font-weight 100
      margin-top 10px

    &_subfield-text
      display block
      font-size 12px
      font-weight 100
      margin-top 10px

[data-popup]
  user-select none

.header-popup
  &-good-added
    .good-added
      background-color alpha(white, 0.9)
      left 0
      position fixed
      top 0
      bottom 0
      right 0
      text-align center
      width 100%
      height 100vh
      z-index 15
      display none
      
      &__wrapper
        height 100%
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        flex-direction column
        align-items center
        justify-content center
      
      &__icon
        width 70px
        height auto
        margin-bottom 1rem
        
      &__title
        font-weight: bold;
        font-size: 28px;
        line-height: 35px;
        margin: 15px 0;
        max-width 230px
        margin-bottom 5rem
      
      &__buttons
        display -webkit-flex
        display -moz-flex
        display -ms-flex
        display -o-flex
        display flex
        justify-content space-between
        
        .btn
          &:first-child
            margin-right 15px
    
    &.popup-open
      .good-added
        display block
        z-index 15
        overflow: hidden