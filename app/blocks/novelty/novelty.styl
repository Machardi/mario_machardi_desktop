.novelty
  margin-top 55px

  &__title
    margin-bottom 15px

  &__wrapper
    background-color #f9fbfc
    height 500px
    margin-top 35px
    padding 45px 75px
    position relative

  &__info
    width 385px

    &_title
      font-size 21px
      font-weight 100
      line-height 25px

    &_description
      font-size 20px
      font-weight 100
      line-height 33px
      margin-top 48px

  &__image
    height 100%
    left 0
    position absolute
    top 0
    width 100%

    & img
      bottom 0
      height auto
      max-width calc(100% - 450px)
      position absolute
      right 0
