.cooperation
  margin-top 30px

  &__column
    &_left
      float left
      margin-right 5px
      position relative
      width 930px

    &_right
      float right
      position relative
      width calc(100% - 935px)

  &__item
    background-color #f1f4f8
    float left
    margin-bottom 5px
    margin-right 5px
    min-height 245px
    max-width 462px
    padding 40px
    position relative
    width 100%

    &:nth-child(2n + 2)
      margin-right 0

    &_four,
    &_five
      max-width none

    &_three
      position absolute
      top 250px

    &_four
      min-height 460px

    &_six
      min-height 1142px

    &_seven
      padding-bottom 58px

    &_title
      font-size 21px
      font-weight 100
      line-height 24px
      margin-bottom 40px

      &_large
        font-size 28px
        margin-bottom 194px

    &_six &_title
      margin-bottom 65px

    &_text
      font-size 16px
      font-weight 100
      line-height 21px

      &_small
        font-size 14px
        line-height 21px

    &_two &_text
      margin-top 47px

    &_four &_text
      max-width 370px

    &_six &_text
      margin-top 60px

    &_seven &_text_small
      margin-top 29px
      position relative
      z-index 1

    &_image
      & img
        height auto
        max-width 100%

    &_four &_image
      position absolute
      right 45px
      top 25px

    &_two &_image
      margin 0 -40px

    &_five &_image
      max-width 590px
      position absolute
      right 18px
      top 40px

    &_seven &_image
      bottom 0
      position absolute
      right 0

  &__audio
    margin-top 60px

    &_play-button
      background-color transparent
      border none
      retinaSprite($volume_group)
      margin 0 auto 83px

      &.show
        display block

      &.show
        display none

    &_pause-button
      background-color transparent
      border none
      retinaSprite($stop_group)
      margin 0 auto 84px

      &.show
        display block

      &.show
        display none

    &_play
      background none
      border none
      display block
      font-size 21px
      font-weight 700
      line-height 24px
      padding 0

  &__nos
    font-size 98px
    font-weight 700
    line-height 80px
    margin-top 235px
